html(lang ='en')
    head 
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      meta(http-equiv='X-UA-Compatible' content='ie=edge')
      title Pug
      link(rel='stylesheet', href='styles.css')
      script(src='https://kit.fontawesome.com/3f93d2c0e4.js', crossorigin='anonymous')

    body.routinebody
        -
          const routines = [
            {
              id: "0o1",
              date: "date",
              type: "EMOM",
              duration: "50 min",
              routine: ["jump rope", "kb swings", "mountain climbers"],
            },
            {
              id: "0o2",
              date: "date",
              type: "3/15s",
              duration: "50 min",
              routine: ["jump rope", "burpees", "side climbers"],
            },
            {
              id: "0o3",
              date: "date",
              type: "HIIT",
              duration: "50 min",
              routine: ["jump rope", "devil press", "high knees"],
            },
          ];
   
        nav 
            span
            .home-btn 
            a(href="/").home-btn  Logout
  
    
        
        div.add-title
            h1 fit daily routines
            h2 Consistency is key!
            h4 What did you do today?
            br
            a(href="/addroutine").sign-in-btn ADD YOUR ROUTINE
        br
        .container
                .today
                      ul 
                      li Fit Daily
                      li #{showRoutines.date}
                      li #{showRoutines.type} 
                      li #{showRoutines.duration}
                      li #{showRoutines.routine}
                      a(class='btn-delete', id=showRoutines.id, data-method="delete", href=`/data/dailyroutines/delete/${showRoutines.id}`) 
                      div.i.fa-solid.fa-circle-minus     
        
                each items in routines
                  .list
                          ul 
                          li Fit Daily
                          li #{items.date}
                          li #{items.type} 
                          li #{items.duration}
                          li #{items.routine}
                          br
                          div.i.fa-solid.fa-circle-minus
      
          
